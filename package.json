{
  "_moduleAliases": {
    "src": "./dist"
  },
  "author": "Milos Bugarinovic <milos.bugarinovic@gmail.com> (http://milos.bugarinovic.com)",
  "bin": {
    "msh-base": "./bin/msh-base.js"
  },
  "bugs": {
    "url": "https://github.com/beecode-rs/msh-base-frame/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@beecode/msh-node-app": "1.0.0",
    "@beecode/msh-node-util": "2.2.0-alpha",
    "@beecode/msh-test-contractor": "0.3.5-alpha",
    "axios": "0.24.0",
    "compare-versions": "4.1.1",
    "dotenv": "10.0.0",
    "extract-zip": "2.0.1",
    "glob": "7.2.0",
    "joi": "17.4.2",
    "minimatch": "3.0.4",
    "module-alias": "2.2.2",
    "mustache": "4.2.0",
    "recursive-copy": "2.0.13",
    "source-map-support": "0.5.21"
  },
  "description": "MicroService helper",
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@commitlint/prompt": "15.0.0",
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.1",
    "@semantic-release/exec": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/release-notes-generator": "10.0.2",
    "@types/axios": "0.14.0",
    "@types/compare-versions": "3.3.0",
    "@types/dotenv": "8.2.0",
    "@types/extract-zip": "2.0.1",
    "@types/glob": "7.2.0",
    "@types/jest": "27.0.3",
    "@types/joi": "17.2.3",
    "@types/minimatch": "3.0.5",
    "@types/module-alias": "2.0.1",
    "@types/mustache": "4.1.2",
    "@types/node": "16.11.9",
    "@types/source-map-support": "0.5.4",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "codecov": "3.8.2",
    "commitizen": "4.2.4",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "markdown-toc": "1.2.0",
    "nyc": "15.1.0",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "replace-json-property": "1.8.0",
    "rimraf": "3.0.2",
    "semantic-release": "18.0.0",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "tsc-watch": "4.5.0",
    "typescript": "4.5.2"
  },
  "files": [
    "dist",
    "bin",
    "package-lock.json"
  ],
  "homepage": "https://github.com/beecode-rs/msh-base-frame#readme",
  "keywords": [
    "shell",
    "microservice",
    "management",
    "project"
  ],
  "license": "mit",
  "main": "./dist/index.js",
  "name": "@beecode/msh-base-frame",
  "repository": {
    "type": "git",
    "url": "https://github.com/beecode-rs/msh-base-frame.git"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "json-schema": "^0.4.0"
  },
  "scripts": {
    "audit:fix": "npx --yes npm-force-resolutions",
    "build": "npm run clean && npm run tsc",
    "build:watch": "npm run tsc:watch -- --preserveWatchOutput --onSuccess \"npm run tsc:cleaner\"",
    "bump-version": "rjp package.json version",
    "clean": "rimraf ./dist/*",
    "commit": "git-cz",
    "coverage": "nyc npm run test:unit",
    "coverage:publish": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "debug": "node --inspect -r ts-node/register ./src/index.ts",
    "doc:toc": "markdown-toc -i ./README.md",
    "eslint": "eslint . --ext .ts --quiet",
    "eslint:fix": "npm run eslint -- --fix",
    "lint": "npm run eslint && npm run prettier",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --check \"./src/**/*.{ts,json}\"",
    "prettier:fix": "prettier --write \"./src/**/*.{ts,json}\"",
    "semantic-release": "semantic-release",
    "semantic-release:check": "npm run semantic-release -- --dry-run --no-ci",
    "start": "node ./dist/index.js",
    "start:ts": "ts-node ./src/index.ts",
    "test": "npm run test:unit -- --forbid-only && npm run test:int -- --forbid-only",
    "test:int": "#mocha ./src/test/{**/,/}*.ts",
    "test:unit": "mocha ./src/{**/,/}*.test.ts",
    "tsc": "tsc -p ./tsconfig-build.json",
    "tsc:check": "npm run tsc -- --noEmit",
    "tsc:cleaner": "ts-cleaner --dist build",
    "tsc:cleaner:watch": "npm run tsc:cleaner -- --watch",
    "tsc:watch": "tsc-watch -p tsconfig-build.json"
  },
  "version": "0.2.1"
}
